<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shridharbadri.aiodelivery.SignUpActivityOwner"
    android:layout_width="match_parent">

    <TextView
        android:text="Sign Up(Owner)"
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        tools:height="24dp"
        android:paddingLeft="10dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        tools:textSize="25dp"
        tools:textAlignment="center"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/scroll"
        android:layout_below="@+id/textView4"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="Cancel"
                android:layout_width="182dp"
                android:layout_height="60dp"
                android:id="@+id/cancel_owner_signup"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="560dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="13dp"
                android:id="@+id/owner_user"
                android:hint="Username"
                android:layout_below="@+id/owner_name"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:id="@+id/owner_add_line3"
                android:layout_below="@+id/owner_add_line2"
                android:layout_alignStart="@+id/owner_add_line2"
                android:hint="Address Line 3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_marginTop="11dp"
                android:id="@+id/owner_add_line2"
                android:hint="Address Line 2"
                android:layout_below="@+id/owner_add_line1"
                android:layout_alignStart="@+id/owner_add_line1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/owner_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/owner_re_password"
                android:hint="Re-enter Password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="22dp"
                android:id="@+id/owner_name"
                android:hint="Name and Surname"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/owner_add_line1"
                android:hint="Address Line 1"
                android:layout_width="match_parent"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/owner_pass"
                android:hint="Password"
                android:layout_below="@+id/owner_add_line3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:text="Address :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="25dp"
                android:layout_weight="0.30"
                android:height="30dp"
                android:layout_marginTop="67dp"
                android:typeface="monospace"
                android:layout_below="@+id/owner_user"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/owner_email"
                android:hint="E-Mail Address"
                android:layout_below="@+id/owner_user"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/signuo_owner_submit"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="submitInformation"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/cancel_owner_signup"
                android:layout_marginTop="560dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
